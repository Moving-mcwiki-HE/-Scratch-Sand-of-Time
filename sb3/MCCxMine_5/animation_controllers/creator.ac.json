{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.creator.special_ctrl": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "special_picker"
          ],
          "transitions": [
            {
              "special1": "v.special == 1"
            },
            {
              "special2": "v.special == 2"
            }
          ]
        },
        "special1": {
          "animations": [
            "special1"
          ],
